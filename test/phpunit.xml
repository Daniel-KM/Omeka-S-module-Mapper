<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE phpunit>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/9.5/phpunit.xsd"
    colors="true"
    backupGlobals="false"
    bootstrap="./bootstrap.php"
    >
    <testsuites>
        <!-- Run unit tests first, then integration tests to avoid state corruption -->
        <testsuite name="MapperTest">
            <directory suffix="Test.php">MapperTest/Stdlib</directory>
            <directory suffix="Test.php">MapperTest/Service</directory>
            <directory suffix="Test.php">MapperTest/Api</directory>
            <directory suffix="Test.php">MapperTest/Controller</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APPLICATION_ENV" value="testing"/>
        <includePath>.</includePath>
    </php>
</phpunit>
